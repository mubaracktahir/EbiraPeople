<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>



    <!--supper text style-->

    <style name="TextAppearance.TextSuperParent" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.BigTitle" parent="TextAppearance.TextSuperParent">
        <item name="fontFamily">@font/raleway_medium</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="TextAppearance.Title" parent="TextAppearance.BigTitle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.SubTitle" parent="TextAppearance.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CardView.CardViewStyle">
        <item name="android:layout_marginBottom">@dimen/_15dp_margin</item>
        <item name="android:clickable">true</item>
    </style>
</resources>